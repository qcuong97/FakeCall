<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/bt_style</item>
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:textSize">7pt</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="Textview_addsound" parent="AlertDialog.AppCompat">
        <item name="android:background">@drawable/textview_style</item>
        <item name="android:textSize">10pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
    </style>
    <style name="SplashscreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/gb_splashscreen</item>
    </style>
</resources>
